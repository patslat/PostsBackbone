<div id="sidebar" style="float: left;"></div>
<div id="content" style="float: left; padding-left: 100px;"></div>

<script type="text/javascript" id="bootstrapped-data">
  <%= Post.all.to_json.html_safe %>
</script>

<script type="text/javascript">
  $(function () {
    var posts = JSON.parse($("#bootstrapped-data").html());

    window.App.initialize($("#sidebar"), $("#content"), posts);
  })
</script>